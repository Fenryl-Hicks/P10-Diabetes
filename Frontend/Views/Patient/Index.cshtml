@model IEnumerable<P10.Frontend.Models.PatientViewModel>

@{
    ViewData["Title"] = "Patients";
}

<h1 class="mt-4">Liste des patients</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter un patient</a>
</p>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}
else if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        Aucun patient trouvé.
    </div>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Genre</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.LastName</td>
                    <td>@p.FirstName</td>
                    <td>@(p.BirthDate?.ToString("dd/MM/yyyy"))</td>
                    <td>@p.GenderName</td>
                    <td>@p.Address</td>
                    <td>@p.Phone</td>
                    <td>
                        <a asp-controller="Patient"
                           asp-action="Details"
                           asp-route-id="@p.Id"
                           class="btn btn-sm btn-primary">
                            Détails
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
