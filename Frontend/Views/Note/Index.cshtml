@model IEnumerable<P10.Frontend.Models.NoteViewModel>
@{
    ViewData["Title"] = "Notes";
    var patientId = ViewBag.PatientId;
}
<h1 class="mt-4">Notes du patient</h1>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" asp-route-patientId="@patientId" class="btn btn-primary">Créer une note</a>
</div>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
@if (!Model.Any())
{
    <div class="alert alert-info mt-3">Aucune note trouvée.</div>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Contenu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
            {
                <tr>
                    <td>@note.Content</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@note.Id" asp-route-patientId="@patientId" class="btn btn-sm btn-warning">Modifier</a>
                        <form asp-action="Delete" asp-route-id="@note.Id" asp-route-patientId="@patientId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Confirmer la suppression ?');">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-controller="Patient" asp-action="Details" asp-route-id="@patientId" class="btn btn-secondary mt-3">Retour au patient</a>
